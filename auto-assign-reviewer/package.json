  "devDependencies": {
    "@tsconfig/recommended": "1.0.8",
    "@types/jest": "29.5.14",
    "@types/node": "20.17.10",
    "@vercel/ncc": "^0.38.3",
    "eslint": "9.17.0",
    "jest": "^29.7.0",
    "prettier": "3.4.2",
    "typescript": "5.7.2",
    "typescript-eslint": "8.18.0",
    "ts-jest": "29.2.5"
  },
  "engines": {
    "node": ">=20"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
